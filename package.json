{
  "name": "@erickwendel/contributions-mcp",
  "version": "1.1.2",
  "description": "An MCP Server to query Erick Wendel's community contributions such as talks, posts and videos.",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "contributions-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:@modelcontextprotocol/sdk --external:zod --banner:js='#!/usr/bin/env node'",
    "prepublishOnly": "npm run build && chmod +x dist/index.js",
    "start": "node --experimental-strip-types --no-warnings src/index.ts",
    "dev": "node --experimental-strip-types --inspect --watch src/index.ts",
    "inspect": "npx @modelcontextprotocol/inspector node --experimental-strip-types src/index.ts",
    "test": "node --experimental-strip-types --no-warnings --test test/**/*.test.ts",
    "test:dev": "node --experimental-strip-types --no-warnings --test --watch test/**/*.test.ts",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.1"
  }
}

    "test": "node --no-warnings --test test/**/*.test.ts",
    "test:dev": "node --no-warnings --test --watch test/**/*.test.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@smithery/cli": "^2.2.1",
    "@types/node": "^25.0.3",
    "zod": "^4.3.5"
  }
}

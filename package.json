{
  "name": "tml-graphql-service",
  "version": "1.0.1",
  "description": "A service that provides access to TML GraphQL API data",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node --no-warnings src/index.ts",
    "dev": "node --inspect --watch src/index.ts",

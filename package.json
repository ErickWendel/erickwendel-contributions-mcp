{
  "name": "@erickwendel/contributions-mcp",
  "version": "1.0.0",
  "description": "A service that provides access to TML GraphQL API data",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node --experimental-strip-types --no-warnings src/index.ts",
    "dev": "node --experimental-strip-types --inspect --watch src/index.ts",
    "inspect": "npx @modelcontextprotocol/inspector node --experimental-strip-types src/index.ts",
    "test": "node --experimental-strip-types --no-warnings --test test/**/*.test.ts",
    "test:dev": "node --experimental-strip-types --no-warnings --test --watch test/**/*.test.ts",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^8.57.1"
  }
}
